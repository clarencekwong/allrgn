<h1>Ingredients List</h1>

<ul>
  <% @ingredients.sort_by{|i| i.number_of_allergens}.reverse.each do |ingredient| %>
    <li><%= link_to ingredient.name, ingredient_path(ingredient) %>   |   <%= ingredient.number_of_allergens %></li>
  <% end %>
</ul>

<%= button_to "Add Ingredient", new_ingredient_path, method: "get" %>
